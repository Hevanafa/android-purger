<Window x:Class="AndroidPurger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AndroidPurger"
        mc:Ignorable="d"
        Title="Android Purger - By Hevanafa (July 2021)" Height="312.702" Width="345.778">
    <Grid>
        <Button x:Name="btnScan" Content="Scan res" Height="30" Margin="10,10,10,0" VerticalAlignment="Top" Click="BtnScan_Click"/>
        <Button x:Name="btnPurge" Content="Purge drawable &amp; raw" Height="30" Margin="10,0,10,80" VerticalAlignment="Bottom" Click="BtnPurge_Click"/>
        <Button x:Name="btnExploreRelease" Content="Visit release folder" Height="30" Margin="10,0,10,10" VerticalAlignment="Bottom" Click="BtnExploreRelease_Click"/>
        <Button x:Name="btnResetBundle" Content="Reset asset bundle" Height="30" Margin="10,0,10,45" VerticalAlignment="Bottom" Click="BtnResetBundle_Click"/>
        <TextBox x:Name="txbMessage" Margin="10,45,10,115" TextWrapping="Wrap"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Visible" TextChanged="TxbMessage_TextChanged"
                 />

    </Grid>
</Window>
